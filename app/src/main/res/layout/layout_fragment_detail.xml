
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backdrop_path"

                android:layout_width="match_parent"
                android:layout_height="120dp"

                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                 />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/poster_path"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="78dp"
        tools:layout_editor_absoluteX="9dp"
        />

   <!-- <TextView
        android:id="@+id/poster_path"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Saturday, September 24 poster_path" />-->

    <TextView
        android:id="@+id/overview"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Saturday, September 24 overview"
        tools:layout_editor_absoluteY="159dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/release_date"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Saturday, September 24 release_date"
        tools:layout_editor_absoluteY="237dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/movie_id"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Saturday, September 24 movie_id"
        tools:layout_editor_absoluteY="133dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/original_title"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Saturday, September 24 original_title"
        tools:layout_editor_absoluteY="185dp"
        tools:layout_editor_absoluteX="0dp" />



    <TextView
        android:id="@+id/vote_average"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Saturday, September 24 vote_average"
        tools:layout_editor_absoluteY="263dp"
        tools:layout_editor_absoluteX="0dp" />
        </android.support.constraint.ConstraintLayout>
</ScrollView>
</layout>

